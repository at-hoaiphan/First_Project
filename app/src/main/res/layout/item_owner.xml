<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#88a7edff">

    <ImageView
        android:id="@+id/imgOwner"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/tvIdOwner"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imgOwner"/>
    <TextView
        android:id="@+id/tvNameOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvIdOwner"
        android:layout_below="@+id/tvIdOwner"/>
    <TextView
        android:id="@+id/tvTypeOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvIdOwner"
        android:layout_below="@+id/tvNameOwner"/>
</RelativeLayout>