<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gio.firstproject.activities.MainActivity">


    <Button
        android:id="@+id/btnLoginPage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Go to Login page"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/btnLayout"
        android:text="Layout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLoginPage"
        android:layout_centerHorizontal="true"/>
    <ImageButton
        android:id="@+id/imgBtnCall"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLayout"
        android:src="@drawable/ic_phone_call"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnIntentFilter"
        android:text="Intent Filter"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgBtnCall"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/btnSqlite"
        android:text="SQLite"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnIntentFilter"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/btnSharedPreference"
        android:text="Share Preference"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSqlite"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/btnStorage"
        android:text="Storage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSharedPreference"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/btnFragment"
        android:text="Fragment"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnStorage"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/btnFragmentDemo2"
        android:text="Fragment2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnStorage"
        android:layout_toEndOf="@+id/btnFragment"/>
</RelativeLayout>



